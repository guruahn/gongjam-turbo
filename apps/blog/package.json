{
  "name": "blog",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:posts && vite build",
    "build:full": "pnpm build:posts && vite build && pnpm build:sitemap",
    "build:posts": "tsx scripts/build-posts.ts",
    "build:sitemap": "tsx scripts/generate-sitemap.ts",
    "preview": "vite preview",
    "lint": "eslint .",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@gongjam/ui": "workspace:*",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.2.0",
    "reading-time": "^1.5.0",
    "shiki": "^1.22.0",
    "vue": "^3.5.13",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@gongjam/eslint-config": "workspace:*",
    "@gongjam/typescript-config": "workspace:*",
    "@gongjam/vite-config": "workspace:*",
    "@module-federation/vite": "^1.9.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vue/test-utils": "2.4.6",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.22.0",
    "glob": "^11.0.0",
    "happy-dom": "20.0.0",
    "postcss": "^8.4.49",
    "sitemap": "^8.0.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^6.0.3",
    "vitest": "3.2.4",
    "vue-tsc": "^2.1.10"
  }
}
